--hiermit anfangen
semantic divider -> <fn-divider>, <div class="fn-divider">
semantic button -> <fn-button>, <button class="fn-button">
semantic breadcrumb -> <fn-breadcrumb>, <ul class="fn-breadcrumb">
semantic message -> <fn-message>, <div class="fn-message">
semantic checkbox -> <fn-checkbox>, <input type="checkbox" class="fn-checkbox">
semantic dropdown -> <fn-dropdown>, <select class="fn-dropdown">
semantic modal -> <fn-modal>, <div class="fn-modal">
semantic popup -> Fnord.tooltip
semantic search -> <fn-search>, <input type="search" class="fn-search">

-- die werden komplex
input/form -> komplex, muessen wir drueber redeen
label -> <fn-label>, <span class="fn-label">
menu -> komplex, muessen wir drueber reden

